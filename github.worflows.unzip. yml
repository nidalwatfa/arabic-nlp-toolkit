name: Extract ZIP

on:
  push:
    paths:
      - '**/*.zip'

jobs:
  extract:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Extract ZIP files
        run: |
          find . -name "*.zip" -exec unzip -o {} -d . \;
          find . -name "*.zip" -delete

      - name: Commit extracted files
        run: |
          git config user.name "nidalwatfa"
          git config user.email "nidal@example.com"
          git add .
          git commit -m "Extract project from ZIP" || exit 0
          git push
